@import "/template/footer/footer.wxss";
@import "/template/position/position.wxss";
@import "/template/share/share.wxss";


.weui-panel::before{
  display: none;
} 
.weui-panel::after{
  display: none;
}
.position-detail{
  padding-bottom:94rpx;
}
.current-position{
  padding:30rpx;
  border-bottom:1rpx solid #e5e5e5; 
  background:#ffffff;
}
.company-info{
  margin-bottom: 24rpx;
  background: #ffffff;
}
.company-info:before{
  border-top:none;
}
.position-desc .content{
  padding:30rpx;
  font-size:28rpx;
  line-height: 1.5;
  color:#353535;
}
.position-welfare .tag-list{
  display: flex;
  flex-wrap: wrap;
  padding:30rpx;
}
.position-welfare .tag-list .tag{
  height: 44rpx;
  line-height: 44rpx;
  padding:0 8rpx;
  border-radius:8rpx;
  background-color:#5AA2E7;
  margin-right:10rpx;
  margin-bottom: 10rpx;
  font-size:26rpx;
  color: #ffffff;
}
.weui-panel__hd{
  display: flex;
  align-items: center;

}
.weui-panel__hd .img{
  width:34rpx;
  height:34rpx;
  margin-right:10rpx;
}
.relative-position{
  padding-top:30rpx;
  padding-bottom:30rpx;
  border-bottom:1rpx solid #e5e5e5;
  background:#ffffff;
}
.relative-position:last-child{
  border-bottom: none;
}
.position-recommend .weui-panel__bd{
  padding-left:30rpx;
  padding-right:30rpx;
}
/* 固定按钮 */
.fixed-btns{
  display: flex;
  position: fixed;
  bottom:0;
  width:100%;
  height: 98rpx;
  color: #ffffff;
  font-size:34rpx;
  border-top:1rpx solid #e5e5e5;
}
.fixed-btns .btn-box{
  flex:1;
  height: 100%;
  background: #ffffff;
}
.fixed-btns .chat-btn{
  border-right:1rpx solid #e5e5e5;
}
.fixed-btns .deliver-btn,.fixed-btns .share-btn{
  flex:2;
}
.fixed-btns .btn-box .btn{
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    height: 100%;
    background: #fff;
    border: 0;
    border-radius: 0;
 }
 .chat-btn .fa,.collect-btn .fa{
    color: #666;
    margin-bottom: 6rpx;
    font-size: 34rpx;
 }
 .chat-btn .fa{
   position: relative;
   top:-3rpx;
 }
 .collect-btn .fa-star{
   color: #5AA2E7;
 }
.fixed-btns .btn-box .btn .word{
  font-size:22rpx;
  color: #666;
  line-height: 1;
  white-space:nowrap;

}
.fixed-btns .share-btn image{
  width:30rpx;
  height:34rpx;
  margin-bottom: 6rpx;
}
.fixed-btns .chat-btn .btn:after,.fixed-btns .share-btn .btn:after,.fixed-btns .deliver-btn .btn::after{
    border:none;  
} 
.fixed-btns .deliver-btn,.fixed-btns .deliver-btn .btn,.fixed-btns .share-btn,.fixed-btns .share-btn .btn{
  background:#F2A654;
  height: 98rpx;
  line-height: 98rpx;
  font-size: 36rpx;
  color: #fff;
} 
.fixed-btns .share-btn,.fixed-btns .share-btn .btn{
  background: #46BE8A;
}
.share-mask{
  background-color: rgba(0,0,0,.8);
  position: fixed;
  width: 100%;
  height: 100%;
  z-index: 1;
  top: 0;
  left: 0;
}
.share-mask .share-tip{
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 400rpx;
  background: url("https://aijuhr.com/images/yidong/sharePng.png") no-repeat 50%;
  background-size: 80% auto;
  z-index: 2;
}
.visits{
  padding: 30rpx;
  background-color: #ffffff;
  font-size: 34rpx;
}
.visits_head{
  display: flex;
  justify-content: space-between;
  vertical-align: bottom;
  line-height: 50rpx;
  margin-bottom: 40rpx;
}
.visits_head_right{
  font-size: 26rpx;
  color: #999999;
}
.visits_con{
  display: flex;
  justify-content: flex-start;
}
.visits_con image{
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 42rpx;
}
