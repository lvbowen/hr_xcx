@import "/template/footer/footer.wxss";
@import "/template/share/share.wxss";

.weui-panel::before{
  display: none;
} 
.weui-panel::after{
  display: none;
}

.company-wrap{
  display: flex;  
  flex-direction: column;
} 
.section{
  margin-top:24rpx;
}
.banner-image{
  height: 360rpx;
  background-size: cover;
  background-repeat: no-repeat;
}
.logo-slogan-wrap{
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  padding-bottom:40rpx;
  background-color: #fff;
  position: relative;
  overflow: visible;
}
.logo-slogan-wrap .logo{
   position: absolute;
   top:-93rpx;
   left:282rpx;
   width:186rpx;
   height:186rpx; 
   border-radius: 50%;
   overflow: hidden;
   background-color: #fff;
   background-size:100%;
   background-repeat: no-repeat;
   box-shadow: 0 10rpx 10rpx #ccc;
   margin-bottom:20rpx;
}
.logo-slogan-wrap .title{
  height:60rpx; 
  font-size:43rpx;
  color:rgba(66,80,98,1);
  line-height:60rpx;
  margin-top:135rpx;
}
.logo-slogan-wrap .slogan{
  width:630rpx;
  margin-bottom:25rpx;
  margin-top:15rpx;
  font-size:26rpx;
  color:rgba(153,153,153,1);
  line-height:37rpx;
}
.logo-slogan-wrap .attention{
  width:270rpx;
  height:70rpx; 
  line-height: 70rpx;
  font-size:32rpx;
  color: #fff;
  background:rgba(90,162,231,1);
  border-radius: 35rpx ; 
}
.weui-panel__hd{
  display: flex;
  align-items: center;
  font-size:34rpx;
  color: #000;
}
.weui-panel__hd .img{
  width:34rpx;
  height:34rpx;
  margin-right:10rpx;
}
.intro-wrap .weui-panel__bd{
   padding:30rpx;
}
.intro-wrap .intro-content-box{    
    overflow: hidden;
    -webkit-transition: max-height 0.3s;
    transition: max-height 0.3s;
}
.intro-wrap .intro-content-box .intro-content{
    text-indent: 2em;
    font-size: 28rpx;
    line-height: 1.5;
    color: #666;
}
.intro-wrap .arrow-box{
  display: flex;
  justify-content: center;
  padding-top:12rpx;
  padding-bottom:12rpx;
  margin-top:18rpx;
}
.intro-wrap .arrow-box .fa{
  color: #D8D8D8;
  font-size:32rpx;
}
.info-wrap .weui-media-box{
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}
.info-wrap .name{
  display: flex;
  justify-content: space-between;
  align-items: center;
  width:100%;
  word-break: break-all;
}
.info-wrap .name .text{
  width:80%;
  font-size: 34rpx;
  line-height: 34rpx;
}
.info-wrap .name .icon{
  width:42rpx;
  height: 44rpx;
  margin-right:22rpx;
}
.info-wrap .short-name{
  line-height: 36rpx;
  font-size: 26rpx;
  color: #999;
}
.info-wrap .address{
  margin-top:20rpx;
}
.info-wrap .address,.info-wrap .tel{
  width:80%;
  line-height: 36rpx;
  font-size: 26rpx;
  color: #999;
}
.info-wrap .address .fa,.info-wrap .tel .fa{
    margin-right:20rpx;
}
.product-wrap .product-list2{
  display: flex;
  padding:15rpx;
}
.product-wrap .product-item{
  width:244rpx;
  /* height: 256rpx; */
  margin-right:35rpx;
  box-shadow: 0 2rpx 15rpx 0rpx #DDE3EB;
  background-color: #fff;
  border-radius: 8rpx;
}
.product-wrap .product-item:last-child{
  margin-right: 0;
}
.product-wrap .product-item .image-box{
  display: flex;
  justify-content: center;
  align-items: center;
  width:244rpx;
  height: 162rpx;  
}
.product-wrap .product-item .image-box .img{
  width:204rpx;
  height: 122rpx;
}
.product-wrap .product-item .product-name{
  line-height: 94rpx;
  text-align: center;
  font-size: 28rpx;
  border-top:1rpx solid #e5e5e5; 
}

.develop-wrap .weui-media-box_appmsg{  
  align-items: flex-start; 
}
.develop-wrap .weui-media-box__hd{
  width:248rpx;
  height: 165rpx;
  margin-right:20rpx;
  border-radius: 8rpx;
  overflow: hidden;
}
.develop-wrap .weui-media-box__desc{
  -webkit-line-clamp:3;
}
.product-wrap .weui-media-box:before,.office-wrap .weui-media-box:before,.team-wrap .weui-media-box:before{
  border-top:none;
}
.team-wrap .weui-panel__hd{
   justify-content: space-between;
}
.team-wrap .weui-panel__hd .left,.team-wrap .weui-panel__hd .right{
  display: flex;
  align-items: center;
  overflow: visible;
}
.swiper{
  position: relative;
  height: 418rpx;
}
.swiper .slide-image{
  width:690rpx;
  height: 360rpx;
}
.swiper .desc{
  line-height: 38rpx;
  font-size:26rpx;
  color:#999;
}
.swiper .wx-swiper-dots{
  position: absolute;
  top:320rpx;
  left:50%;
  -webkit-transform: translateX(-50%);
  transform: translateX(-50%);
}
.swiper .wx-swiper-dot{
  background: rgba(255,255,255,0.3);
}
.swiper .wx-swiper-dot-active{
  background: #fff;
}
