page{
  height: 100%;
  background-color: #f1f5f8;
}
.ell{
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.form-title{
  font-size:26rpx;
  color: #999;
  padding:36rpx 0 24rpx 30rpx;
}
.form-id{
  display: block;
}
.btn-formId{
  border:0;
  padding:0;
  margin:0;
  line-height: 1.5;
  background: transparent;
  font-size:28rpx; 
  text-align: left;
  border-radius:0;
}
.btn-formId::after{
  border:0;
}
.weui-vcode-btn{
  color: #5AA2E7;
  font-size:32rpx;
}
.weui-vcode-btn:active{
  color: #5AA2E7;
}
/* 文字  */
